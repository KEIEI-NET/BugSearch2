<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>

  <appSettings>
    <!--ハンディとのソケット通信用-->
    <!--ポート　　　(当プログラムを実行するPCのポート)-->
    <add key="SocketPort" value="20024"/>
    <!-- ログの出力判定(on:出力する,off:出力しない) -->
    <add key="DebugDetailLog" value="on" />
    <!-- ＩＰＣアドレス -->
    <add key="IpcAddress" value="ipc://PmHandyChannel/PmHandyService" />
    <!-- リトライ回数 -->
    <add key="retrytimes" value="3" />
    <!-- リトライ間隔 -->
    <add key="retryinterval" value="100" />
	<!-- ソケット通信のバッファサイズ -->
	<add key="socket_buffer_size" value="500000" />
  </appSettings>

  <log4net>
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <!-- ログ・ファイル名の先頭部分 -->
      <param name="File" value=".\Log\HT_RELAY" />
      <!-- ファイル名の日付部分 -->
      <param name="DatePattern" value="&quot;.&quot;yyyyMMdd&quot;.log&quot;" />
      <!-- 追加書き込み -->
      <param name="AppendToFile" value="true" />
      <!-- サイズ・日付ごとにファイルを作成することを指定 -->
      <param name="RollingStyle" value="Composite" />
      <!-- ログ・ファイル名が固定ではないので“false”を指定 -->
      <param name="StaticLogFileName" value="false" />
      <!-- サイズの制約の指定 -->
      <param name="MaximumFileSize" value="5000KB" />
      <!-- 保存するファイル数 -->
      <param name="MaxSizeRollBackups" value="20" />
      <!-- ログの書式 -->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%-5p][%t] %m%n" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="RollingLogFileAppender" />
    </root>
  </log4net>
</configuration>